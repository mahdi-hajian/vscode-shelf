{
  "name": "vscode-shelf",
  "displayName": "Shelf - Save Changes Temporarily",
  "description": "Shelf extension for VS Code - Temporarily save and manage uncommitted changes without committing, similar to WebStorm's Shelf feature",
  "version": "0.2.1",
  "publisher": "mahdihajian",
  "icon": "icon.png",
  "author": "mahdihajian",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahdi-hajian/vscode-shelf.git"
  },
  "bugs": {
    "url": "https://github.com/mahdi-hajian/vscode-shelf/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "shelf",
    "shelve",
    "unshelve",
    "shelf extension",
    "vscode shelf",
    "stash",
    "temporary",
    "save",
    "uncommitted",
    "changes",
    "git",
    "scm",
    "source control",
    "webstorm",
    "patch",
    "diff",
    "working tree",
    "changeset",
    "temporary storage",
    "uncommitted changes",
    "save changes",
    "temporary save",
    "git stash",
    "version control"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shelf.shelveChanges",
        "title": "Shelve Changes",
        "category": "Shelf",
        "icon": "$(save-all)"
      },
      {
        "command": "shelf.shelveSelectedFiles",
        "title": "Shelve Selected Files",
        "category": "Shelf",
        "icon": "$(file-code)"
      },
      {
        "command": "shelf.unshelveAll",
        "title": "Unshelve All",
        "category": "Shelf"
      },
      {
        "command": "shelf.unshelveSelection",
        "title": "Unshelve Selection",
        "category": "Shelf"
      },
      {
        "command": "shelf.delete",
        "title": "Delete",
        "category": "Shelf"
      },
      {
        "command": "shelf.clearAll",
        "title": "Clear All",
        "category": "Shelf"
      },
      {
        "command": "shelf.viewDiff",
        "title": "View Diff",
        "category": "Shelf"
      },
      {
        "command": "shelf.refresh",
        "title": "Refresh",
        "category": "Shelf",
        "icon": "$(refresh)"
      }
    ],
      "views": {
      "scm": [
        {
          "id": "shelfView",
          "name": "Shelf"
        }
      ]
    },
    "menus": {
      "scm/title": [
        {
          "command": "shelf.shelveChanges",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "shelf.refresh",
          "when": "view == shelfView",
          "group": "navigation"
        },
        {
          "command": "shelf.shelveChanges",
          "when": "view == shelfView",
          "group": "navigation"
        },
        {
          "command": "shelf.shelveSelectedFiles",
          "when": "view == shelfView",
          "group": "navigation"
        },
        {
          "command": "shelf.clearAll",
          "when": "view == shelfView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "shelf.unshelveAll",
          "when": "view == shelfView && viewItem == shelfItemEntry",
          "group": "inline"
        },
        {
          "command": "shelf.unshelveSelection",
          "when": "view == shelfView && viewItem == shelfItemEntry",
          "group": "inline"
        },
        {
          "command": "shelf.viewDiff",
          "when": "view == shelfView && (viewItem == shelfItemEntry || viewItem == shelfItemFile)",
          "group": "inline"
        },
        {
          "command": "shelf.delete",
          "when": "view == shelfView && (viewItem == shelfItemEntry || viewItem == shelfItemFile)",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Shelf",
      "properties": {
        "shelf.autoSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save changes to shelf when switching branches"
        },
        "shelf.maxItems": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of items to keep in shelf"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}

